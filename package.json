{
  "name": "@walletconnect/monorepo",
  "private": true,
  "workspaces": [
    "example",
    "packages/sdk",
    "packages/clients/*",
    "packages/helpers/*",
    "packages/providers/*"
  ],
  "preconstruct": {
    "packages": [
      "packages/sdk",
      "packages/clients/*",
      "packages/helpers/*",
      "packages/providers/*"
    ]
  },
  "keywords": [
    "wallet",
    "walletconnect",
    "ethereum",
    "jsonrpc",
    "mobile",
    "qrcode",
    "web3",
    "crypto",
    "cryptocurrency",
    "dapp"
  ],
  "author": "WalletConnect <walletconnect.org>",
  "homepage": "https://github.com/WalletConnect/walletconnect-monorepo/",
  "license": "LGPL-3.0",
  "scripts": {
    "postinstall": "preconstruct dev && manypkg check",
    "watch": "preconstruct watch",
    "dev": "preconstruct dev",
    "build": "preconstruct build",
    "release": "yarn build && changeset publish",
    "typecheck": "manypkg exec yarn tsc --noEmit",
    "test": "jest",
    "format": "yarn format:prettier && yarn format:eslint",
    "format:prettier": "yarn lint:prettier --write",
    "format:eslint": "yarn lint:eslint --fix",
    "lint": "yarn lint:prettier && yarn lint:eslint",
    "lint:prettier": "prettier --list-different \"{*,**/*}.json\"",
    "lint:eslint": "eslint \"{*,**/*}.{js,jsx,ts,tsx}\"",
    "health-check": "node scripts/health-check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/walletconnect/walletconnect-monorepo.git"
  },
  "bugs": {
    "url": "https://github.com/walletconnect/walletconnect-monorepo/issues"
  },
  "dependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.12.1",
    "@changesets/changelog-github": "^0.3.0",
    "@changesets/cli": "^2.11.2",
    "@manypkg/cli": "^0.17.0",
    "@preconstruct/cli": "^2.0.6",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "babel-jest": "^26.6.3",
    "discord.js": "12.5.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "eslint-plugin-unused-imports": "^1.0.1",
    "jest": "^26.6.3",
    "prettier": "2.2.1",
    "typescript": "4.2.3"
  }
}
